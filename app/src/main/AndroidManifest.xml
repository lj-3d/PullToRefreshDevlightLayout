<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="lj_3d.pulltorefreshsample.activity">

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PullToRefreshActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ListViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NestedScrollViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ScrollViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".RecyclerViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GridViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".WebViewActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PullToRefreshHeaderActivity"
            android:label="@string/title_activity_pull_to_refresh_header">
        </activity>
    </application>

</manifest>